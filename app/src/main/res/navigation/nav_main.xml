<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/poemsFragment"
        android:name="com.mambo.poetree.ui.poems.PoemsFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_poems">
        <action
            android:id="@+id/action_poemsFragment_to_editFragment2"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_poemsFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.mambo.poetree.ui.edit.EditFragment"
        android:label="Compose"
        tools:layout="@layout/fragment_edit">
        <argument
            android:name="poem"
            android:defaultValue="@null"
            app:argType="com.mambo.poetree.data.model.Poem"
            app:nullable="true" />
        <action
            android:id="@+id/action_editFragment_to_composeFragment"
            app:destination="@id/composeFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.mambo.poetree.ui.settings.SettingFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mambo.poetree.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_poemFragment"
            app:destination="@id/poemFragment" />
    </fragment>
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.mambo.poetree.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.mambo.poetree.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.mambo.poetree.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/poemFragment"
        android:name="com.mambo.poetree.ui.poem.PoemFragment"
        android:label="PoemFragment" >
        <argument
            android:name="poem"
            app:argType="com.mambo.poetree.data.model.Poem" />
    </fragment>
    <fragment
        android:id="@+id/composeFragment"
        android:name="com.mambo.poetree.ui.compose.ComposeFragment"
        android:label="ComposeFragment" >
        <argument
            android:name="poem"
            app:argType="com.mambo.poetree.data.model.Poem" />
        <action
            android:id="@+id/action_composeFragment_to_poemFragment"
            app:destination="@id/poemFragment" />
        <action
            android:id="@+id/action_composeFragment_to_homeFragment2"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>