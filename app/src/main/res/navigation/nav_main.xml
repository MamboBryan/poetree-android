<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/landingFragment">

    <fragment
        android:id="@+id/poemsFragment"
        android:name="com.mambo.poetree.ui.poems.PoemsFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_poems">
        <action
            android:id="@+id/action_poemsFragment_to_editFragment2"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_poemsFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.mambo.poetree.ui.edit.EditFragment"
        android:label="Compose"
        tools:layout="@layout/fragment_edit">
        <argument
            android:name="poem"
            android:defaultValue="@null"
            app:argType="com.mambo.poetree.data.model.Poem"
            app:nullable="true" />
        <action
            android:id="@+id/action_editFragment_to_composeFragment"
            app:destination="@id/composeFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.mambo.poetree.ui.settings.SettingFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mambo.poetree.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_poemFragment"
            app:destination="@id/poemFragment" />
    </fragment>
    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.mambo.poetree.ui.fragments.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.mambo.poetree.ui.fragments.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.mambo.poetree.ui.fragments.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/poemFragment"
        android:name="com.mambo.poetree.ui.poem.PoemFragment"
        android:label="PoemFragment" >
        <argument
            android:name="poem"
            app:argType="com.mambo.poetree.data.model.Poem" />
    </fragment>
    <fragment
        android:id="@+id/composeFragment"
        android:name="com.mambo.poetree.ui.compose.ComposePoemFragment"
        android:label="ComposeFragment" >
        <argument
            android:name="poem"
            app:argType="com.mambo.poetree.data.model.Poem" />
        <action
            android:id="@+id/action_composeFragment_to_poemFragment"
            app:destination="@id/poemFragment" />
        <action
            android:id="@+id/action_composeFragment_to_homeFragment2"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_main"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/landingFragment"
        android:name="com.mambo.poetree.ui.fragments.LandingFragment"
        android:label="fragment_landing"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_landingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_landingFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />
        <action
            android:id="@+id/action_landingFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
        <action
            android:id="@+id/action_landingFragment_to_setupFragment"
            app:destination="@id/setupFragment" />
        <action
            android:id="@+id/action_landingFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.mambo.poetree.ui.fragments.AuthenticationFragment"
        android:label="AuthenticationFragment" >
        <action
            android:id="@+id/action_authenticationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authenticationFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mambo.poetree.ui.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_landingFragment"
            app:destination="@id/landingFragment"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.mambo.poetree.ui.fragments.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_setupFragment"
            app:destination="@id/setupFragment"
            app:popUpTo="@id/setupFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.mambo.poetree.ui.fragments.OnBoardingFragment"
        android:label="OnBoardingFragment" >
        <action
            android:id="@+id/action_onBoardingFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment"
            app:popUpTo="@id/authenticationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/setupFragment"
        android:name="com.mambo.poetree.ui.fragments.SetupFragment"
        android:label="SetupFragment" >
        <action
            android:id="@+id/action_setupFragment_to_landingFragment"
            app:destination="@id/landingFragment"
            app:popUpTo="@id/landingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.mambo.poetree.ui.fragments.DashboardFragment"
        android:label="DashboardFragment" />
</navigation>